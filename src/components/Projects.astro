---
import NextJSIcon from "./icons/NextJSIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJSIcon,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#4929b4] text-white",
        icon: TailwindIcon,
    },
};
const PROJECTS = [
    {
        title: "SVGL - A beautiful library with SVG logos",
        description:
            "SVG logo library of the most popular brands. +10k views per month. +2K SVGs downloaded. Built from scratch with Next.js, React & Tailwind CSS.",
        link: "https://svgl.vercel.app/",
        github: "https://github.com/pheralb/svgl",
        image: "/projects/svgl.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    }
];
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-xl font-semibold text-violet-2000 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4"></tag.icon>
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt={`Project ${image} Screenshot`}
            />
        </article>
    ))
}
